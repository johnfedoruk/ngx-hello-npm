{
	"compilerOptions": {
	  "target": "es5",
	  "module": "commonjs",
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	  "removeComments": true,
	  "noImplicitAny": true,
	  "suppressImplicitAnyIndexErrors": true,
	  "declaration": true,
	  "outDir": "lib",
	  "lib": [
		"es2016",
		"dom"
	  ]
	},
	"include": [
	  "src/app/hello/**/*"
	]
  }
  